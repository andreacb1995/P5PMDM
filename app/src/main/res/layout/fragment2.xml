<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.example.andreacarballidop3di.UI.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">
        <LinearLayout
            android:id="@+id/toolbar2"
            android:background="#8Affa4a2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:alpha="50"
            android:visibility="gone">


            <ImageView
                android:id="@+id/toolbarVolver2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@null"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_arrow_back_24"
                tools:ignore="OnClick" />
            <Space
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_weight="1" />

            <ImageView
                android:id="@+id/toolbarEditar2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@null"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_edit_24"
                tools:ignore="OnClick" />
            <ImageView
                android:id="@+id/toolbarEliminar2"
                android:layout_width="44dp"
                android:layout_height="44dp"
                android:background="@null"
                android:onClick="toolbarEliminar"
                android:padding="6dp"
                android:src="@drawable/ic_baseline_delete_24"
                tools:ignore="OnClick" />

        </LinearLayout>
        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rvFragmento2"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/textFragmento1" />
    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>