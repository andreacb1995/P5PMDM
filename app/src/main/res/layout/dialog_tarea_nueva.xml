<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activityAñadir"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingStart="16dp"
    android:paddingEnd="16dp">

    <TextView
        android:id="@+id/tarea"
        android:layout_width="55dp"
        android:layout_height="35dp"
        android:layout_marginStart="16dp"

        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:layout_marginTop="45dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:inputType="text"
        android:text="Tarea"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <EditText android:id="@+id/edTarea"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:fontFamily="sans-serif"
        android:ems="10"
        android:layout_weight="1"
        android:hint="Tarea"
        android:maxLines="1"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:autofillHints=""
        android:textSize="16sp"/>

    <TextView
        android:id="@+id/tituloFecha"
        android:layout_width="61dp"
        android:layout_height="36dp"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:text="Fecha"
        android:textColor="#000000"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView android:id="@+id/tvFecha"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:hint="Fecha"
        android:maxLines="1"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:autofillHints=""
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="16sp" />
    <TextView
        android:id="@+id/tituloHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="5dp"
        android:layout_weight="1"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:text="Hora"
        android:textSize="18sp"
        android:textStyle="bold" />

    <TextView android:id="@+id/tvHora"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:ems="10"
        android:layout_weight="1"
        android:hint="Hora"
        android:fontFamily="sans-serif"
        android:textColor="#000000"
        android:layout_marginStart="16dp"
        android:layout_marginEnd="16dp"
        android:layout_marginBottom="20dp"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fitsSystemWindows="true"
        android:orientation="horizontal">

        <ImageButton
            android:id="@+id/imagenAddUbicacion"
            android:layout_width="66dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="23dp"
            android:background="#00000000"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/ic_baseline_add_location_alt_24" />

        <ImageButton
            android:id="@+id/imagenAddrecordatorio"
            android:layout_width="59dp"
            android:layout_height="match_parent"
            android:layout_marginEnd="65dp"
            android:background="#00000000"
            android:clickable="true"
            android:onClick="onClick"
            android:src="@drawable/ic_baseline_notification_add_24" />

        <Button
            android:id="@+id/boton_guardar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="right"
            android:background="@color/p_dark"
            android:text="Añadir"
            android:textAllCaps="false"
            android:textSize="16sp"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.924"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.065" />
    </LinearLayout>


</LinearLayout>

